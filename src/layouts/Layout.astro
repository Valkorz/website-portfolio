---
import '../styles/global.css';
import SteamHeader from '../components/SteamHeader.astro'; // Import the component
const { title, currentTab, searchEnabled = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-steam-dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>  
    </head>
    <body class="bg-linear-to-b from-steam-gray to-steam-dark2 text-steam-accent min-h-screen">
        <SteamHeader activeTab={currentTab} searchEnabled={searchEnabled}/>
        <!-- this crap needs fixing -->
        <!-- <div class:list={[searchEnabled ? 'searchbar-visible' : 'searchbar-hidden', 'bg-steam-accent rounded-2xl flex flex-row items-center px-3 py-2 gap-3 shadow-2xs shadow-steam-dark']}>
        </div> -->
        
        <main class="max-w-6xl mx-auto p-4">
            <slot /> </main>
    </body>
</html>

<style>
    .searchbar-visible{
        display: flex;
        width: 50%;
        justify-content: center;
        align-items: center;
        margin-left: auto;
        margin-right: auto;
        margin-top: 10px;
    }

    .searchbar-hidden{
        display: none;
