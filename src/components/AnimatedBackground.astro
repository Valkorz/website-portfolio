<style>
  .wave {
    position: absolute;
    bottom: -50px;
    width: 200%; 
    height: 100vh;
    animation: move-wave 20s infinite linear;
    transform: translate3d(0, 0, 0);
  }

  .wave-slow {
    animation: move-wave 35s infinite linear reverse;
    opacity: 0.7;
  }

  @keyframes move-wave {
    0% { transform: translateX(0) scaleY(1); }
    50% { transform: translateX(-25%) scaleY(1.1); } /* Slight deformation effect */
    100% { transform: translateX(-50%) scaleY(1); }
  }
</style>